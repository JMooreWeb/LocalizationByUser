@using System.Globalization
@using System.Threading.Tasks
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div>Current Culture: @CultureInfo.CurrentCulture.DisplayName</div>
            <div>Current UI Culture: @CultureInfo.CurrentUICulture.DisplayName</div>

            <div>Current UI Culture: @DateTime.Now.ToLongDateString()</div>
            <div>Current UI Culture: @DateTime.Now.ToShortDateString()</div>
        </div>
    </div>
</div>